<!DOCTYPE html>
<html>
  <head>
    <title>petSNAP</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar navbar-brand https://getbootstrap.com/docs/4.0/components/navbar/-->
    <nav class="navbar navbar-light navbar-toggleable-sm navbar-custom navbar-expand-md" style="background-color:#ffea00;">
      <div class="container">
        <%= link_to "petSNAP", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contactus_path, class: "nav-link" %></li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "btn btn-info" %></li>
            <li class="nav-item"><%= link_to "Log in", new_user_session_path, class: "nav-link" %></li>
          <% end %>  
        </ul>
      </div>
    </nav>

    <!--flash messages  -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class:"alert alert-info #{name}")%>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2019 MaeEnterprises</p>
        </center>
      </div>
    </footer>

  </body>
</html>