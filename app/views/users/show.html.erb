<div class='container'>
    <p></p>
    <h1> <%= @user.username %> </h1> 
    <p></p>
    
    <% if @user == current_user %>
        <%= link_to 'Edit your details' %> 
        &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <%= link_to 'Back to all Tails', tweets_path %>
        <p></p>
  
    <% else %>
        <% if current_user.following?(@user) %>
            <%= link_to 'Unfollow', unfollow_user_path(@user.username), method: :delete %>
            &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  <%= link_to 'Back to all Tails', tweets_path %>
            <p> </p>
       
        <% else %>
        
            <%= link_to 'Follow', follow_user_path(@user.username), method: :post, class: "btn btn-info btn-sm" %>
        
            &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  <%= link_to 'Back to all Tails', tweets_path %>
        
            <p></p>
        <% end %>
    <% end %>
     <p></p>
    <%= image_tag("jocat.jpg", class:"img-fluid", :size => "300x190")%> 
 
    <p></p>
    <p> I dont have a pet! </p>
    
  
    <%= link_to 'Followers: 7' %> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  &nbsp &nbsp &nbsp &nbsp 
    <%= link_to 'Following: 12' %>
    
    <p></p>
    <h3> <%= @user.username %>'s Tails </h3>
    <p></p>
    <p></p>
    
    <tbody>
      <% @tweets.reverse_each do |tweet, posted| %>
        <div class="mt-3">
          <div class="card bg-light" style="width: 18rem;">
            <div class="card-body">

              <p class="card-text"><%= tweet.content %></p>
              <a href="#" class="card-link"><%= link_to 'Show', tweet %></a>
              <% if tweet.user == current_user %>
              <a href="#" class="card-link">           </a>
              <a href="#" class="card-link">           </a>
              <a href="#" class="card-link"><%= link_to 'Edit', edit_tweet_path(tweet) %></a>
              <a href="#" class="card-link">           </a>
              <a href="#" class="card-link">           </a>
              <a href="#" class="card-link">           </a>
              <a href="#" class="card-link"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></a>
              <% end %>
              <p> </p>
              <p><%= tweet.created_at.strftime('%H:%M, %e %b %Y')%></p>
            </div>
          </div>
        </div>
      <% end %>
    </tbody>
  </table>
  
  <br>

</div>
    
    
    
</div>

