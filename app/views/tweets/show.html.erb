<div class='container'>
  
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>User:</strong>
    <%= @tweet.user.email %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @tweet.content %>
  </p>
  
  <% if @tweet.user == current_user %>
    <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
  <% end %>

  <div class='container'>
    <%= link_to 'Back', tweets_path %>
  </div>
</div>
